<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D4AF37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_gravity="start"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/textBesideBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@id/backButton"
                android:fontFamily="@font/biryanibold"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/username"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapeteks"
        android:fontFamily="@font/biryani"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <EditText
        android:id="@+id/email"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shapeteks"
        android:fontFamily="@font/biryani"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/sandi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shapeteks"
            android:fontFamily="@font/biryani"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:padding="10dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/umur"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shapeteks"
        android:fontFamily="@font/biryani"
        android:hint="Umur"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordInputLayout" />

    <EditText
        android:id="@+id/alamat"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shapeteks"
        android:fontFamily="@font/biryani"
        android:hint="Alamat"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/umur" />


    <CheckBox
        android:id="@+id/lupapassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="70dp"
        android:fontFamily="@font/biryani"
        android:text="Saya setuju dengan Kebijakan Privasi dan Ketentuan Pengguna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alamat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDaftar"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/biryanisb"
        android:text="Sign Up"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lupapassword" />


</androidx.constraintlayout.widget.ConstraintLayout>